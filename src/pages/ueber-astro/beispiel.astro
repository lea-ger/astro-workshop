---
import {Image} from "astro:assets";
import Layout from "@/layouts/SlideLayout.astro";
import shopSearch from "@/assets/shop-search.png";
import shopProduct from "@/assets/shop-product.png";
---

<Layout next="/how-to-astro" prev="/ueber-astro/astro-paradigma" slideId="7">
    <h1>Beispiel</h1>

    <div class="grid grid-cols-2 my-8">
        <div class="flex flex-col items-center justify-center">
            <Image
                    src={shopSearch}
                    loading="lazy"
                    width={500}
                    height={500}
                    alt="Shop Suche"
                    class="w-68"
            />
            <p class="mt-8">Dynamische Inhalte vom Server gerendert</p>
        </div>

        <div class="flex flex-col items-center justify-center" data-step>
            <div class="relative">
                <Image
                        src={shopProduct}
                        loading="lazy"
                        width={500}
                        height={500}
                        alt="Shop Suche"
                        class="w-68"
                />
                <div data-step="2"
                     class="absolute inset-0 flex items-center justify-center border-8 border-slate-400 rounded-lg"
                     style="height: 79%;top: 18%;"
                />
                <div data-step="3">
                    <div class="absolute inset-0 flex items-center justify-center border-8 border-purple-600 rounded-lg"
                         style="height: 18%;top: 0%;"
                    />
                    <div class="absolute inset-0 flex items-center justify-center border-8 border-purple-600 rounded-lg"
                         style="left: 58%; top: 18%;height: 35px;"
                    />
                    <div class="absolute inset-0 flex items-center justify-center border-8 border-purple-600 rounded-lg"
                         style="height: 5%;top: 96%;"
                    />
                    <div class="absolute inset-0 flex items-center justify-center border-8 border-purple-600 rounded-lg"
                         style="left: 73%;
  top: 63.6%;
  height: 35px;
  width: 18%;"
                    />
                </div>
            </div>
            <p class="mt-8"><span class="text-slate-400">Statische Inhalte</span> / <span class="text-purple-600">Dynamische Inhalte</span>
            </p>
        </div>
    </div>
</Layout>

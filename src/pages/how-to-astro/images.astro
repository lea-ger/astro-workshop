---
import Layout from "@/layouts/SlideLayout.astro";
import {Code} from 'astro:components';
import {Image} from 'astro:assets';
---

<Layout next="/how-to-astro/collections" prev="/how-to-astro/islands/client-directives" slideId="18">
    <h1>Astro Image Optimierung</h1>

    <div class="grid grid-cols-3 gap-8 mt-8">
        <div>
            <h3>Grundlegende Verwendung</h3>
            <Code code={`
---
import { Image } from 'astro:assets';
import meinBild from '../assets/mein-bild.jpg';
---

<!-- Optimiertes Bild mit 
automatischen Abmessungen -->
<Image src={meinBild} alt="Meine Beschreibung" />

<!-- Mit angepassten Abmessungen -->
<Image 
  src={meinBild} 
  width={300} 
  height={200} 
  alt="Angepasstes Bild" 
/>

<!-- Remote-Bilder benötigen Abmessungen -->
<Image 
  src="https://example.com/bild.jpg" 
  width={300} 
  height={200} 
  alt="Remote-Bild" 
/>
            `} lang="astro"/>
        </div>
        <div data-step>
            <h3>Live-Beispiel</h3>
            <div class="flex gap-4">
                <div>
                    <p class="mb-2">Optimiertes Bild:</p>
                    <Image
                            src="https://placecats.com/1900/1080"
                            width={400}
                            height={300}
                            alt="Optimiertes Beispielbild"
                            class="border border-purple-500"
                    />
                </div>
            </div>
        </div>
        <div data-step>
            <h3 class="mt-6">Funktionen</h3>
            <ul>
                <li><strong>Formatkonvertierung:</strong> Automatische Konvertierung in WebP/AVIF</li>
                <li><strong>Größenanpassung:</strong> Anpassung der Bildgröße an die Anforderungen</li>
                <li><strong>Lazy Loading:</strong> Automatisches verzögertes Laden</li>
                <li><strong>Responsive Bilder:</strong> Unterstützung für verschiedene Bildgrößen</li>
                <li><strong>Lokale & Remote:</strong> Funktioniert mit lokalen und externen Bildern</li>
            </ul>
        </div>
    </div>
</Layout>